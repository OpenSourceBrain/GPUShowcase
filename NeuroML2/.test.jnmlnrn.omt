# Script for running automated tests on OSB using Travis-CI, see https://github.com/OpenSourceBrain/osb-model-validation
 
target: LEMS_simplenet.xml 
engine: jNeuroML_NEURON
mep: .test.mep
experiments:
  Pop0_cell3:
    observables:
      spike times:
        file: 
          path: Pop0_v.dat
          columns: [0,3]
          scaling: [1000, 1000]
        spike detection: 
          method: threshold
          threshold: -55
        tolerance: 0
  Pop1_cell0:
    observables:
      spike times:
        file: 
          path: Pop1_v.dat
          columns: [0,1]
          scaling: [1000, 1000]
        spike detection: 
          method: threshold
          threshold: -55
        tolerance: 0
  Pop1_cell4:
    observables:
      spike times:
        file: 
          path: Pop1_v.dat
          columns: [0,5]
          scaling: [1000, 1000]
        spike detection: 
          method: threshold
          threshold: -55
        tolerance: 0
